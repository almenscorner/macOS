{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "IntuneCD Farm Name": {
            "type": "string",
            "minLength": 1
        },
        "IntuneCD Farm SKU": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard"
            ],
            "defaultValue": "Free"
        },
        "IntuneCD Farm WorkerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0"
        },
        "IntuneCD DB Name": {
            "type": "string",
            "minLength": 1
        },
        "IntuneCD DB Collation": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
        },
        "IntuneCD DB Edition": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ]
        },
        "IntuneCD DB RequestedServiceObjectiveName": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "S0",
                "S1",
                "S2",
                "P1",
                "P2",
                "P3"
            ],
            "metadata": {
                "description": "Describes the performance level for Edition"
            }
        },
        "IntuneCD DB AdminLogin": {
            "type": "string",
            "minLength": 1
        },
        "IntuneCD DB AdminLoginPassword": {
            "type": "securestring"
        }
    },
    "resources": [
        /* CONTAINER REGISTRY */
        {
            "name": "[parameters('IntuneCD Farm Name')]",
            "type": "Microsoft.ContainerRegistry/registries",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "dependsOn": [],
            "properties": {
                "publicNetworkAccess": "Enabled",
                "zoneRedundancy": "Disabled"
            }
        },
        /* SERVER FARM */
        {
            "name": "[parameters('IntuneCD Farm Name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-06-01",
            "dependsOn": [],
            "tags": {
                "displayName": "IntuneCD"
            },
            "properties": {
                "name": "[parameters('IntuneCD Farm Name')]",
                "sku": "[parameters('IntuneCD Farm SKU')]",
                "workerSize": "[parameters('IntuneCD Farm WorkerSize')]",
                "numberOfWorkers": 1
            }
        },
        /* DATABASE */
        {
            "name": "[variables('fullyQualifiedIntuneCDdbName')]",
            "type": "Microsoft.Sql/servers/databases",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', variables('IntuneCDdbName'))]"
            ],
            "tags": {
                "displayName": "IntuneCDdb"
            },
            "properties": {
                "collation": "[parameters('IntuneCD DB Collation')]",
                "edition": "[parameters('IntuneCD DB Edition')]",
                "maxSizeBytes": "1073741824",
                "requestedServiceObjectiveName": "[parameters('IntuneCD DB RequestedServiceObjectiveName')]"
            }

        },
        {
            "name": "[variables('IntuneCDdbName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [],
            "tags": {
                "displayName": "IntuneCDdb"
            },
            "properties": {
                "administratorLogin": "[parameters('IntuneCD DB AdminLogin')]",
                "administratorLoginPassword": "[parameters('IntuneCD DB AdminLoginPassword')]"
            },
            "resources": [
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', variables('IntuneCDdbName'))]"
                    ],
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    }
                }
            ]
        },
        /* WEB APP */
        {
            "apiVersion": "2018-11-01",
            "name": "[variables('IntuneCDName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('IntuneCD Farm Name'))]"
            ],
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('IntuneCD Farm Name'))]": "Resource",
                "displayName": "IntuneCD"
            },
            "properties": {
                "name": "[variables('IntuneCDName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('IntuneCD Farm Name'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "DOCKER_REGISTRY_SERVER_URL",
                            "value": "[concat('https://', parameters('IntuneCD Farm Name'), '.azurecr.io')]"
                        },
                        {
                            "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                            "value": "false"
                        },
                        {
                            "name": "SERVER_NAME",
                            "value": "[concat('https://', variables('IntuneCDName'), '.azurewebsites.net')]"
                        },
                        {
                            "name": "REDIRECT_PATH",
                            "value": "/auth/signin-oidc"
                        },
                        {
                            "name": "ADMIN_ROLE",
                            "value": ""
                        },
                        {
                            "name": "AZDBDRIVER",
                            "value": "(ODBC Driver 17 for SQL Server)"
                        },
                        {
                            "name": "AZDBNAME",
                            "value": "[concat('[variables(''fullyQualifiedIntuneCDdbName'')]')]"
                        },
                        {
                            "name": "AZDBUSER",
                            "value": "[concat('[parameters(''IntuneCD DB AdminLogin'')]')]"
                        },
                        {
                            "name": "AZDBPW",
                            "value": "[parameters('IntuneCD DB AdminLoginPassword')]"
                        },
                        {
                            "name": "AZDBSERVER",
                            "value": "[concat(variables('IntuneCDdbName'), '.database.windows.net')]"
                        },
                        {
                            "name": "AZUREAD_ID",
                            "value": ""
                        },
                        {
                            "name": "CLIENT_ID",
                            "value": ""
                        },
                        {
                            "name": "CLIENT_SECRET",
                            "value": ""
                        },
                        {
                            "name": "DEVOPS_ORG_NAME",
                            "value": ""
                        },
                        {
                            "name": "DEVOPS_PROJECT_NAME",
                            "value": ""
                        },
                        {
                            "name": "SCOPE",
                            "value": "499b84ac-1321-427f-aa17-267ca6975798/.default"
                        },
                        {
                            "name": "SECRET_KEY",
                            "value": ""
                        },
                        {
                            "name": "SESSION_LIFETIME_HOURS",
                            "value": ""
                        }
                    ],
                    "linuxFxVersion": "COMPOSE|",
                    "alwaysOn": false
            }
            }
        }
    ],
    "variables": {
        "fullyQualifiedIntuneCDdbName": "[concat(variables('IntuneCDdbName'), '/', parameters('IntuneCD DB Name'))]",
        "IntuneCDdbName": "[concat('IntuneCDdb', uniqueString(resourceGroup().id))]",
        "IntuneCDName": "[concat('IntuneCD', uniqueString(resourceGroup().id))]"
    }
}
