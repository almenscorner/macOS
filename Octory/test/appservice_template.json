{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "IntuneCDName": {
            "type": "string",
            "minLength": 1
        },
        "IntuneCDSKU": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard"
            ],
            "defaultValue": "Free"
        },
        "IntuneCDWorkerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0"
        },
        "IntuneCDdbName": {
            "type": "string",
            "minLength": 1
        },
        "IntuneCDdbCollation": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
        },
        "IntuneCDdbEdition": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ]
        },
        "IntuneCDdbRequestedServiceObjectiveName": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "S0",
                "S1",
                "S2",
                "P1",
                "P2",
                "P3"
            ],
            "metadata": {
                "description": "Describes the performance level for Edition"
            }
        },
        "IntuneCDdbAdminLogin": {
            "type": "string",
            "minLength": 1
        },
        "IntuneCDdbAdminLoginPassword": {
            "type": "securestring"
        }
    },
    "resources": [
        {
            "name": "[parameters('IntuneCDName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-06-01",
            "dependsOn": [],
            "tags": {
                "displayName": "IntuneCD"
            },
            "properties": {
                "name": "[parameters('IntuneCDName')]",
                "sku": "[parameters('IntuneCDSKU')]",
                "workerSize": "[parameters('IntuneCDWorkerSize')]",
                "numberOfWorkers": 1
            }
        },
        {
            "name": "[variables('fullyQualifiedIntuneCDdbName')]",
            "type": "Microsoft.Sql/servers/databases",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', variables('IntuneCDdbName'))]"
            ],
            "tags": {
                "displayName": "IntuneCDdb"
            },
            "properties": {
                "collation": "[parameters('IntuneCDdbCollation')]",
                "edition": "[parameters('IntuneCDdbEdition')]",
                "maxSizeBytes": "1073741824",
                "requestedServiceObjectiveName": "[parameters('IntuneCDdbRequestedServiceObjectiveName')]"
            }
        },
        {
            "name": "[variables('IntuneCDdbName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-04-01-preview",
            "dependsOn": [],
            "tags": {
                "displayName": "IntuneCDdb"
            },
            "properties": {
                "administratorLogin": "[parameters('IntuneCDdbAdminLogin')]",
                "administratorLoginPassword": "[parameters('IntuneCDdbAdminLoginPassword')]"
            },
            "resources": [
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', variables('IntuneCDdbName'))]"
                    ],
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    }
                }
            ]
        }
    ],
    "variables": {
        "fullyQualifiedIntuneCDdbName": "[concat(variables('IntuneCDdbName'), '/', parameters('IntuneCDdbName'))]",
        "IntuneCDdbName": "[concat('IntuneCDdb', uniqueString(resourceGroup().id))]"
    }
}
